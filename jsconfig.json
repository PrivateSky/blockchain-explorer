{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "core/*": ["src/core/*"],
      "components/*": ["src/components/*"],
      "configs/*": ["src/configs/*"],
      "constants/*": ["src/constants/*"],
      "locales/*": ["src/locales/*"],
      "utils/*": ["src/utils/*"],
      "features/*": ["src/features/*"],
      "test/*": ["src/test/*"]
    }
  },
  "exclude": ["node_modules", "api"]
}
